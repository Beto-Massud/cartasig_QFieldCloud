{$QFIELDCLOUD_HOST} {
    root * /home/app/web/
    file_server


    # TODO : this should only be served on local/dev
    route /minio/* {
        uri strip_prefix /minio
        reverse_proxy s3:9000
    }

    @notStatic {
        not {
            path /staticfiles/*
            path /mediafiles/*
        }
    }
    reverse_proxy @notStatic app:8000
}
